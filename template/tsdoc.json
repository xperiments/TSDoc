{
	"tags":
	{
		"allowUnknownTags" : true
	},
	"plugins":[
		 "plugins/markdown"
		,"plugins/commentsOnly" // Comment if no TypeScript will be used
		,"$TSDOC$/plugins/TSDoc.js"
	],
	"opts":
	{
		"template"	:"$TSDOC$",
		"recurse"	:"true"
	},
	"templates" : {
		"cleverLinks"     : false,
		"monospaceLinks"  : false
	},
	"source":
	{
		"includePattern": "(\\.d)?\\.ts$" // For only .js --->   ".+\\.js(doc)?$"
	},
	"markdown"  : {
		"parser"   : "gfm",
		"hardwrap" : true
	},
	"tsdoc":{
		"source"		:"$SOURCE$",
		"destination"	:"$DESTINATION$",
		"systemName"	: "$PROJECTNAME$",
		"footer"		: "",
		"copyright"		: "$PROJECTNAME$ Copyright Â© $YEAR$ $USERNAME$.",
		"outputSourceFiles" : true
	}
}
